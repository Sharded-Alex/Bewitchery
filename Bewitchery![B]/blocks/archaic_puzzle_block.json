{
  "format_version": "1.19.0",
  "minecraft:block": {
    "description": {
      "identifier": "bw:archaic_puzzle_block",
      "properties": {
        "bw:rotation": [2, 3, 4, 5]
      }
    },
    "components": {
      "minecraft:material_instances": {
        "*": {
          "texture": "bedrock",
          "render_method": "opaque"
        }
      },
      "minecraft:unit_cube": {},
      "minecraft:creative_category": {
				"category": "items"
			},
			"minecraft:on_player_placing": {
				"event": "bw:rotation",
				"target": "self"
			},
      "minecraft:on_interact": {
        "event": "bw:unveil_treasure",
        "target": "self"
      },
      "minecraft:rotation": [0, 0, 0],
      "minecraft:selection_box": {
        "origin": [-8, 0,-8],
        "size": [16, 16, 16]
      },
      "minecraft:collision_box": {
        "origin": [-8, 0,-8],
        "size": [16, 16, 16]
      },
	    "minecraft:explosion_resistance": 1000,
      "minecraft:destroy_time": 99999,
      "minecraft:breathability": "solid",
      "minecraft:friction": 0.6,
      "minecraft:block_light_filter": 0.0,
      "minecraft:block_light_emission": 0.0
    },
    "events": {
      "bw:rotation": {
        "set_block_property": {
          "bw:rotation": "(q.cardinal_facing_2d)"
        }
      },
      "bw:unveil_treasure": {
        "sequence": [
          {
            "condition": "q.is_item_name_any('slot.weapon.mainhand', 0, 'bw:mundane_wand')",
            "randomize": [
              {
                "weight": 35,
                "run_command": {
                  "command": [
                    "structure load witch_chest ~~~ 0_degrees none layer_by_layer 1",
                    "particle bw:absorb_lunar_essence ~~~"
                  ],
                  "target": "self"
                }
              },
              {
                "weight": 25,
                "run_command": {
                  "command": [
                    "structure load normal_chest ~~~ 0_degrees none layer_by_layer 1",
                    "particle bw:absorb_lunar_essence ~~~"
                  ],
                  "target": "self"
                }
              },
              {
                "weight": 20,
                "run_command": {
                  "command": [
                    "tellraw @s {\"rawtext\":[{\"text\":\"Nothing is revealed from this cache.\"}]}",
                    "summon bw:combusting_projectile ~~~ smaller_explode"
                  ],
                  "target": "player"
                },
                "set_block_at_pos": {
                  "block_type": "minecraft:stone",
                  "block_offset": [0, 0, 0]
                }
              },
              {
                "weight": 10,
                "run_command": {
                  "command": [
                    "tellraw @s {\"rawtext\":[{\"text\":\"Nothing is revealed from this cache.\"}]}"
                  ],
                  "target": "player"
                },
                "set_block_at_pos": {
                  "block_type": "minecraft:stone",
                  "block_offset": [0, 0, 0]
                }
              }
            ]
          }
        ]
      }
    },
    "properties": [
      {
        "condition": "q.block_property('bw:rotation') == 0",
        "components": {
          "minecraft:rotation": [0, 0, 0]
        }
      },
      {
        "condition": "q.block_property('bw:rotation') == 1",
        "components": {
          "minecraft:rotation": [0, 180, 0]
        }
      },
      {
        "condition": "q.block_property('bw:rotation') == 2",
        "components": {
          "minecraft:rotation": [0, 90, 0]
        }
      },
      {
        "condition": "q.block_property('bw:rotation') == 3",
        "components": {
          "minecraft:rotation": [0, 270, 0]
        }
      }
    ]
  }
}