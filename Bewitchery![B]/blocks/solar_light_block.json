{
  "format_version": "1.19.0",
  "minecraft:block": {
    "description": {
      "identifier": "bw:solar_light_block"
    },
    "components": {
      "minecraft:material_instances": {
        "*": {
          "texture": "transparent",
          "render_method": "alpha_test"
        }
      },
      "minecraft:unit_cube": {},
      "minecraft:rotation": [0, 0, 0],
      "minecraft:selection_box": {
        "origin": [-8, 0,-8],
        "size": [16, 16, 16]
      },
      "minecraft:collision_box": false,
      "minecraft:on_interact": {
        "event": "bw:dissipate",
        "target": "self"
      },
      "minecraft:queued_ticking": {
        "looping": true,
        "interval_range": [25, 35],
        "on_tick": {
          "event": "bw:shine"
        }
      },
	    "minecraft:explosion_resistance": 0,
      "minecraft:destroy_time": 99999,
      "minecraft:breathability": "air",
      "minecraft:friction": 0.6,
      "minecraft:block_light_filter": 0.0,
      "minecraft:block_light_emission": 1.0
    },
    "events": {
      "bw:shine": {
        "run_command": {
          "command": [
            "damage @e[r=4, family=undead] 1 fire",
            "particle bw:solar_flames ~~~"
          ],
          "target": "self"
        }
      },
      "bw:dissipate": {
        "sequence": [
          {
            "condition": "q.is_item_name_any('slot.weapon.mainhand', 0, 'bw:lunar_imbued_quartz')",
            "run_command": {
              "command":[
                "setblock ~~~ air []"
              ],
              "target": "self"
            }
          }
        ]
      }
    }
  }
}