{
	"format_version": "1.17.0",
	"minecraft:item": {
		"description": {
			"identifier": "bw:mundane_wand"
		},
		"components": {
			"minecraft:max_stack_size": 1,
			"minecraft:hand_equipped": true,
			"minecraft:foil": false,
			"minecraft:can_destroy_in_creative": false,
      "minecraft:use_duration": 1.5,
			"minecraft:chargeable": {
			  "movement_modifier": 0.6,
			  "on_complete": {
			    "event": "absorb_essence"
			  }
			},
			"minecraft:icon": {
				"texture": "mundane_wand"
			}
		},
		"events": {
		  "absorb_essence": {
		    "sequence": [
		      {
  		      "randomize": [
  		        {
  		          "weight": 10,
  		          "condition": "query.biome_has_any_tag('forest', 'flower_forest', 'jungle')",
  		          "randomize": [
  		            {
  		              "weight": 5,
      		          "run_command": {
      		            "command": [
      		              "particle bw:absorb_earth_essence ~~~",
      		              "scoreboard players add @s bw:earthAff 1",
      		              "scoreboard players remove @s bw:skyAff 1"
      		            ]
      		          }
  		            },
  		            {
                    "weight": 25
  		            }
  		          ]
  		        },
  		        {
  		          "weight": 10,
  		          "condition": "query.biome_has_any_tag('nether', 'nether_waste') || (q.time_of_day >= 0.25 && q.time_of_day <= 0.75 && query.biome_has_any_tag('overworld', 'overworld_generation'))",
  		          "randomize": [
  		            {
  		              "weight": 5,
      		          "run_command": {
      		            "command": [
      		              "particle bw:absorb_solar_essence ~~~",
      		              "scoreboard players add @s bw:solarAff 1",
      		              "scoreboard players remove @s bw:lunarAff 1"
      		            ]
      		          }
  		            },
  		            {
                    "weight": 25
  		            }
  		          ]
  		        },
  		        {
  		          "weight": 10,
  		          "condition": "((q.time_of_day >= 0.75 || q.time_of_day <= 0.25) && query.biome_has_any_tag('overworld', 'overworld_generation'))",
 		            "randomize": [
  		            {
  		              "weight": 5,
      		          "run_command": {
      		            "command": [
      		              "particle bw:absorb_lunar_essence ~~~",
      		              "scoreboard players add @s bw:lunarAff 1",
      		              "scoreboard players remove @s bw:solarAff 1"
      		            ]
      		          }
  		            },
  		            {
                    "weight": 25
  		            }
  		          ]
  		        },
  		        {
  		          "weight": 10,
  		          "condition": "query.is_in_water_or_rain",
 		            "randomize": [
  		            {
  		              "weight": 5,
      		          "run_command": {
      		            "command": [
      		              "particle bw:absorb_sky_essence ~~~",
      		              "scoreboard players add @s bw:skyAff 1",
      		              "scoreboard players remove @s bw:earthAff 1"
      		            ]
      		          }
  		            },
  		            {
                    "weight": 25
  		            }
  		          ]
  		        },
  		        {
  		          "weight": 10,
  		          "condition": "query.biome_has_any_tag('the_end')",
 		            "randomize": [
  		            {
  		              "weight": 5,
      		          "run_command": {
      		            "command": [
      		              "particle bw:absorb_ender_essence ~~~",
      		              "scoreboard players add @s bw:enderAff 1",
      		              "scoreboard players remove @s bw:solarAff 1",
      		              "scoreboard players remove @s bw:lunarAff 1"
      		            ]
      		          }
  		            },
  		            {
                    "weight": 25
  		            }
  		          ]
  		        }
  		      ]
  		    }
		    ]
		  }
		}
	}
}