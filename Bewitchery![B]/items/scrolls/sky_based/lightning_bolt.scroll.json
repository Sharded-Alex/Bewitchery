{
	"format_version": "1.17.0",
	"minecraft:item": {
		"description": {
			"identifier": "bw:lightning_bolt_scroll"
		},
		"components": {
			"minecraft:max_stack_size": 16,
			"minecraft:creative_category": {
				"parent": "itemGroup.name.bewitched_scrolls"
			},
			"minecraft:hand_equipped": false,
			"minecraft:foil": false,
			"minecraft:can_destroy_in_creative": false,
			"minecraft:on_use": {
				"on_use": {
					"event": "release_spell"
				}
			},
      "minecraft:cooldown":{
        "category": "bw:lightning_bolt",
        "duration": 5
      },
			"minecraft:icon": {
				"texture": "sky_scroll"
			}
		},
		"events": {
			"release_spell": {
			  "sequence": [
			    {
			      "condition": "q.scoreboard('bw:lB_CD') == 0 && q.scoreboard('bw:skyAff') >= 35 && query.is_in_water_or_rain || q.scoreboard('bw:Sky') == 1",
			      "run_command": {
			        "command": [
			          "summon lightning_bolt ^^^7",
			          "playsound ambient.weather.lightning.impact @a[r=6] ~~~ 0.8",
			          "scoreboard players set @s bw:lB_CD 0",
			          "particle bw:sky_spellcast ~~~"
			        ]
			      },
			      "decrement_stack": {}
			    },
			    {
			      "condition": "q.scoreboard('bw:lB_CD') > 0 && q.scoreboard('bw:skyAff') >= 35 && query.is_in_water_or_rain || q.scoreboard('bw:Sky') == 1",
			      "run_command": {
			        "command": [
			          "tellraw @s {\"rawtext\":[{\"text\":\"This spell is on cooldown.\"}]}"
			        ]
			      }
			    },
			    {
			      "condition": "q.scoreboard('bw:lB_CD') >= 0 && q.scoreboard('bw:skyAff') < 35",
			      "run_command": {
			        "command": [
			          "tellraw @s {\"rawtext\":[{\"text\":\"Your affinity with §7Sky Magick§r isn't high enough to cast the spell inscribed on this scroll. [35.0%]\"}]}"
			        ]
			      }
			    },
			    {
			      "condition":"!query.is_in_water_or_rain && !q.scoreboard('bw:Sky') == 1",
			      "run_command": {
			        "command": [
			          "tellraw @s {\"rawtext\":[{\"text\":\"§7There is not enough Sky Essence to cast the spell inscribed on this scroll.§r\"}]}"
			        ]
			      }
			    }
			  ]
			}
		}
	}
}