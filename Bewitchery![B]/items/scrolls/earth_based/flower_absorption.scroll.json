{
	"format_version": "1.17.0",
	"minecraft:item": {
		"description": {
			"identifier": "bw:flower_absorption_scroll"
		},
		"components": {
			"minecraft:max_stack_size": 16,
			"minecraft:creative_category": {
				"parent": "itemGroup.name.bewitched_scrolls"
			},
			"minecraft:hand_equipped": false,
			"minecraft:foil": false,
			"minecraft:can_destroy_in_creative": false,
			"minecraft:on_use": {
				"on_use": {
					"event": "release_spell"
				}
			},
      "minecraft:cooldown":{
        "category":"bw:flowerAbsorb",
        "duration": 10
      },
			"minecraft:icon": {
				"texture": "earth_scroll"
			}
		},
		"events": {
			"release_spell": {
			  "sequence": [
			    {
			      "condition": "q.scoreboard('bw:fAbsorb') == 0 && q.scoreboard('bw:earthAff') >= 25 && (q.scoreboard('bw:Earth') == 1 || (q.biome_has_any_tag('overworld', 'overworld_generation')))",
			      "run_command": {
			        "command": [
			          "playsound dig.leaves @a[r=6] ~~~ 0.8",
			          "scoreboard players set @s bw:fAbsorb 200",
			          "function flower_power",
			          "particle bw:earth_spellcast ~~~"
			        ]
			      },
			      "decrement_stack": {}
			    },
			    {
			      "condition": "q.scoreboard('bw:fAbsorb') > 0 && q.scoreboard('bw:earthAff') >= 25 && (q.scoreboard('bw:Earth') == 1 || (q.biome_has_any_tag('overworld', 'overworld_generation')))",
			      "run_command": {
			        "command": [
			          "tellraw @s {\"rawtext\":[{\"text\":\"This spell is on cooldown.\"}]}"
			        ]
			      }
			    },
			    {
			      "condition": "q.scoreboard('bw:fAbsorb') >= 0 && q.scoreboard('bw:earthAff') < 25",
			      "run_command": {
			        "command": [
			          "tellraw @s {\"rawtext\":[{\"text\":\"Your affinity with §2Earth Magick§r isn't high enough to cast the spell inscribed on this scroll. [25.0%]\"}]}"
			        ]
			      }
			    },
			    {
			      "condition":"!q.scoreboard('bw:Earth') == 1 && !q.biome_has_any_tag('overworld', 'overworld_generation')",
			      "run_command": {
			        "command": [
			          "tellraw @s {\"rawtext\":[{\"text\":\"§aThere is not enough Earth Essence to cast the spell inscribed on this scroll.§r\"}]}"
			        ]
			      }
			    }
			  ]
			}
		}
	}
}