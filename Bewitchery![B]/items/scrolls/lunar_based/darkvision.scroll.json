{
	"format_version": "1.17.0",
	"minecraft:item": {
		"description": {
			"identifier": "bw:darkvision_scroll"
		},
		"components": {
			"minecraft:max_stack_size": 16,
			"minecraft:creative_category": {
				"parent": "itemGroup.name.bewitched_scrolls"
			},
			"minecraft:hand_equipped": false,
			"minecraft:foil": false,
			"minecraft:can_destroy_in_creative": false,
			"minecraft:on_use": {
				"on_use": {
					"event": "release_spell"
				}
			},
      "minecraft:cooldown":{
        "category":"bw:darkvision",
        "duration": 95
      },
			"minecraft:icon": {
				"texture": "lunar_scroll"
			}
		},
		"events": {
			"release_spell": {
			  "sequence": [
			    {
			      "condition": "q.scoreboard('bw:dV_CD') == 0 && q.scoreboard('bw:lunarAff') >= 20 && (((q.time_of_day >= 0.75 || q.time_of_day <= 0.25) && query.biome_has_any_tag('overworld', 'overworld_generation')) || q.is_in_water || q.scoreboard('bw:Lunar') == 1)",
			      "add_mob_effect": {
        		  "effect": "night_vision",
        		  "target": "holder",
        		  "duration": 90,
        		  "amplifier": 0
        		},
			      "run_command": {
			        "command": [
			          "playsound random.splash @a[r=6] ~~~ 0.8",
			          "scoreboard players set @s bw:dV_CD 1900",
			          "particle bw:lunar_spellcast ~~~"
			        ]
			      },
			      "decrement_stack": {}
			    },
			    {
			      "condition": "q.scoreboard('bw:dV_CD') > 0 && q.scoreboard('bw:lunarAff') >= 20 && (((q.time_of_day >= 0.75 || q.time_of_day <= 0.25) && query.biome_has_any_tag('overworld', 'overworld_generation')) || q.is_in_water || q.scoreboard('bw:Lunar') == 1)",
			      "run_command": {
			        "command": [
			          "tellraw @s {\"rawtext\":[{\"text\":\"This spell is on cooldown.\"}]}"
			        ]
			      }
			    },
			    {
			      "condition": "q.scoreboard('bw:dV_CD') >= 0 && q.scoreboard('bw:lunarAff') < 20",
			      "run_command": {
			        "command": [
			          "tellraw @s {\"rawtext\":[{\"text\":\"Your affinity with §3Lunar Magick§r isn't high enough to cast the spell inscribed on this scroll. [20.0%]\"}]}"
			        ]
			      }
			    },
			    {
			      "condition":"!((q.time_of_day >= 0.75 || q.time_of_day <= 0.25) && query.biome_has_any_tag('overworld', 'overworld_generation')) && !q.is_in_water && !q.scoreboard('bw:Lunar') == 1",
			      "run_command": {
			        "command": [
			          "tellraw @s {\"rawtext\":[{\"text\":\"§3There is not enough Lunar Essence to cast the spell inscribed on this scroll.§r\"}]}"
			        ]
			      }
			    }
			  ]
			}
		}
	}
}