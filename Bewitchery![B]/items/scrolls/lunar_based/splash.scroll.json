{
	"format_version": "1.17.0",
	"minecraft:item": {
		"description": {
			"identifier": "bw:splash_scroll"
		},
		"components": {
			"minecraft:max_stack_size": 16,
			"minecraft:creative_category": {
				"parent": "itemGroup.name.bewitched_scrolls"
			},
			"minecraft:hand_equipped": false,
			"minecraft:foil": false,
			"minecraft:can_destroy_in_creative": false,
			"minecraft:projectile": {
			  "minimum_critical_power": 2.6,
			  "projectile_entity": "bw:splash"
			},
			"minecraft:on_use": {
				"on_use": {
					"event": "release_spell"
				}
			},
      "minecraft:cooldown":{
        "category":"bw:splash",
        "duration": 2.5
      },
			"minecraft:icon": {
				"texture": "lunar_scroll"
			}
		},
		"events": {
			"release_spell": {
			  "sequence": [
			    {
			      "condition": "q.scoreboard('bw:splash_CD') == 0 && q.scoreboard('bw:lunarAff') >= 1 && (((q.time_of_day >= 0.75 || q.time_of_day <= 0.25) && query.biome_has_any_tag('overworld', 'overworld_generation')) || q.is_in_water || q.scoreboard('bw:Lunar') == 1)",
	          "shoot": {
        			"projectile": "bw:splash",
        			"launch_power": 2.6
        		},
			      "run_command": {
			        "command": [
			          "playsound random.splash @a[r=6] ~~~ 0.8",
			          "scoreboard players set @s bw:splash_CD 40",
			          "particle bw:lunar_spellcast ~~~"
			        ]
			      },
			      "decrement_stack": {}
			    },
			    {
			      "condition": "q.scoreboard('bw:splash_CD') > 0 && q.scoreboard('bw:lunarAff') >= 1 && (((q.time_of_day >= 0.75 || q.time_of_day <= 0.25) && query.biome_has_any_tag('overworld', 'overworld_generation')) || q.is_in_water || q.scoreboard('bw:Lunar') == 1)",
			      "run_command": {
			        "command": [
			          "tellraw @s {\"rawtext\":[{\"text\":\"This spell is on cooldown.\"}]}"
			        ]
			      }
			    },
			    {
			      "condition": "q.scoreboard('bw:splash_CD') >= 0 && q.scoreboard('bw:lunarAff') < 1",
			      "run_command": {
			        "command": [
			          "tellraw @s {\"rawtext\":[{\"text\":\"Your affinity with §3Lunar Magick§r isn't high enough to cast the spell inscribed on this scroll. [1.0%]\"}]}"
			        ]
			      }
			    },
			    {
			      "condition":"!((q.time_of_day >= 0.75 || q.time_of_day <= 0.25) && query.biome_has_any_tag('overworld', 'overworld_generation')) && !q.is_in_water && !q.scoreboard('bw:Lunar') == 1",
			      "run_command": {
			        "command": [
			          "tellraw @s {\"rawtext\":[{\"text\":\"§3There is not enough Lunar Essence to cast the spell inscribed on this scroll.§r\"}]}"
			        ]
			      }
			    }
			  ]
			}
		}
	}
}