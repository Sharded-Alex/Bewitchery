{
	"format_version": "1.17.0",
	"minecraft:item": {
		"description": {
			"identifier": "bw:warming_bolt_scroll"
		},
		"components": {
			"minecraft:max_stack_size": 16,
			"minecraft:creative_category": {
				"parent": "itemGroup.name.bewitched_scrolls"
			},
			"minecraft:hand_equipped": false,
			"minecraft:foil": false,
			"minecraft:can_destroy_in_creative": false,
			"minecraft:projectile": {
			  "minimum_critical_power": 2.6,
			  "projectile_entity": "bw:heal_bolt"
			},
			"minecraft:on_use": {
				"on_use": {
					"event": "release_spell"
				}
			},
      "minecraft:cooldown":{
        "category":"bw:warming_bolt",
        "duration": 5
      },
			"minecraft:icon": {
				"texture": "solar_scroll"
			}
		},
		"events": {
			"release_spell": {
			  "sequence": [
			    {
			      "condition": "q.scoreboard('bw:sH_CD') == 0 && q.scoreboard('bw:solarAff') >= 10 && (q.time_of_day >= 0.25 && q.time_of_day <= 0.75 && q.biome_has_any_tag('overworld', 'overworld_generation')) || query.biome_has_any_tag('nether', 'nether_wastes') || q.scoreboard('bw:Solar') == 1",
	          "shoot": {
        			"projectile": "bw:heal_bolt",
        			"launch_power": 2.6
        		},
			      "run_command": {
			        "command": [
			          "playsound fire.ignite @a[r=6] ~~~ 0.8",
			          "scoreboard players set @s bw:sH_CD 80",
			          "particle bw:solar_spellcast ~~~"
			        ]
			      },
			      "decrement_stack": {}
			    },
			    {
			      "condition": "q.scoreboard('bw:sH_CD') > 0 && q.scoreboard('bw:solarAff') >= 10 && (q.time_of_day >= 0.25 && q.time_of_day <= 0.75 && q.biome_has_any_tag('overworld', 'overworld_generation')) || query.biome_has_any_tag('nether', 'nether_wastes') || q.scoreboard('bw:Solar') == 1",
			      "run_command": {
			        "command": [
			          "tellraw @s {\"rawtext\":[{\"text\":\"This spell is on cooldown.\"}]}"
			        ]
			      }
			    },
			    {
			      "condition": "q.scoreboard('bw:sH_CD') >= 0 && q.scoreboard('bw:solarAff') < 10",
			      "run_command": {
			        "command": [
			          "tellraw @s {\"rawtext\":[{\"text\":\"Your affinity with §cSolar Magick§r isn't high enough to cast the spell inscribed on this scroll. [10.0%]\"}]}"
			        ]
			      }
			    },
			    {
			      "condition":"!(q.time_of_day >= 0.25 && q.time_of_day <= 0.75 && q.biome_has_any_tag('overworld', 'overworld_generation')) && !query.biome_has_any_tag('nether', 'nether_wastes') && !q.scoreboard('bw:Solar') == 1",
			      "run_command": {
			        "command": [
			          "tellraw @s {\"rawtext\":[{\"text\":\"§cThere is not enough Solar Essence to cast the spell inscribed on this scroll.§r\"}]}"
			        ]
			      }
			    }
			  ]
			}
		}
	}
}